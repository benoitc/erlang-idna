{erl_opts, [
  warn_unused_vars,
  warn_export_all,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_bif_clash,
  warn_unused_record,
  warn_deprecated_function,
  warn_obsolete_guard,
  strict_validation,
  warn_export_vars,
  warn_exported_vars
]}.

{deps, []}.

{project_plugins, [rebar3_ex_doc]}.

{hex, [{doc, ex_doc}]}.

{ex_doc, [
  {extras, [
    {"README.md", #{title => "Overview"}},
    {"CHANGELOG", #{title => "Changelog"}},
    {"LICENSE", #{title => "License"}}
  ]},
  {main, "README.md"},
  {homepage_url, "https://github.com/benoitc/erlang-idna"},
  {source_url, "https://github.com/benoitc/erlang-idna"},
  {api_reference, true}
]}.
